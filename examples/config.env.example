# SATUSEHAT Configuration Example
# Copy this file to .env and fill in your actual credentials

# Environment Selection
SATUSEHAT_ENVIRONMENT=staging  # Options: staging, production

# OAuth2 Credentials (Obtain from SATUSEHAT Platform)
# Staging: https://api-satusehat-stg.dto.kemkes.go.id
# Production: https://api-satusehat.kemkes.go.id
SATUSEHAT_CLIENT_ID=your_client_id_here
SATUSEHAT_CLIENT_SECRET=your_client_secret_here

# Organization Identifiers
# Obtained after registering your Organization resource
SATUSEHAT_ORGANIZATION_ID=your_organization_id_here
FASYANKES_CODE=your_facility_code_here

# API Configuration
API_TIMEOUT=30  # seconds
MAX_RETRIES=3
RETRY_BACKOFF=2  # exponential backoff multiplier

# Feature Flags
ENABLE_BACKGROUND_SYNC=true
ENABLE_VALIDATION=true
ENABLE_DEBUG_LOGGING=false

# Database Configuration (for reference implementation)
DATABASE_URL=postgresql://user:password@localhost:5432/emr_database

# Celery/Redis (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
ENABLE_METRICS=true

# Security
# NEVER commit the actual .env file to version control!
# Add .env to .gitignore (already done in this repository)
